extends layout.pug

block title
  title= bookData.title
block content
  h1 Update Book
  include form_error
  form(method='post' action=`/books/${bookData.id}`)
    p
      label(for='title') Title
      input#title(name='title' type='text' value=`${bookData.title}`)
    p
      label(for='author') Author
      input#author(name='author' type='text' value=`${bookData.author}`)
    p
      label(for='genre') Genre
      if bookData.genre
        input#genre(name='genre' type='text' value=`${bookData.genre}`)
      else
        input#genre(name='genre' type='text' value="")
    p
      label(for='year') Year
      if bookData.year
        input#year(name='year' type='text' value=`${bookData.year}`)
      else
        input#year(name='year' type='text' value="")
    p
      input(type='submit' value='Update Book')
  form(method='post' action=`/books/${bookData.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href=`/books`) Cancel
    p
      input(type='submit' value='Delete Book')