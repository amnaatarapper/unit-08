doctype html
head
  title New Book
  link(rel='stylesheet' href='../static/stylesheets/style.css')
h1 New Book
form(action='/books/new' method='POST')
  p
    if errorTitle
      label(for='title')= `Title: ${errorTitle}`
    else
      label(for='title') Title

    input#title(name='title' type='text')
  p
    if errorAuthor
      label(for='author')= `Author: ${errorAuthor}`
    else
      label(for='author') Author
      
    input#author(name='author' type='text')
  p
    label(for='genre') Genre
    input#genre(name='genre' type='text')
  p
    label(for='year') Year
    input#year(name='year' type='text')
  p
    input(type='submit' value='Create New Book')
  p
    a.button(href='/books') Cancel