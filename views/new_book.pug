extends layout.pug

block title
  title New Book
block content
  h1 New Book
  include form_error
  form(action='/books/new' method='POST')
    p
      label(for='title') Title
      if bookData.title
        input#title(name='title' type='text' value=`${bookData.title}`)
      else
        input#title(name='title' type='text')
    p
      label(for='author') Author
      if bookData.author
        input#author(name='author' type='text' value=`${bookData.author}`)
      else
        input#author(name='author' type='text')
    p
      label(for='genre') Genre
      if bookData.genre
        input#genre(name='genre' type='text' value=`${bookData.genre}`)
      else
        input#genre(name='genre' type='text')
    p
      label(for='year') Year
      if bookData.year
        input#year(name='year' type='text' value=`${bookData.year}`)
      else
        input#year(name='year' type='text')
    p
      input(type='submit' value='Create New Book')
    p
      a.button(href='/books') Cancel